    <script>
        // Toggle mobile navigation
        function toggleNavbar() {
            const nav = document.getElementById('navbarNav');
            nav.classList.toggle('show');
        }

        // Toggle user dropdown menu
        function toggleUserMenu(event) {
            event.preventDefault();
            const menu = document.getElementById('userMenu');
            menu.style.display = menu.style.display === 'none' ? 'block' : 'none';
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const userMenu = document.getElementById('userMenu');
            if (userMenu && !event.target.closest('.dropdown')) {
                userMenu.style.display = 'none';
            }
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Auto-dismiss alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    if (alert.parentNode) {
                        alert.style.opacity = '0';
                        setTimeout(() => alert.remove(), 300);
                    }
                }, 5000);
            });
        });

        // Mock SignalR connection to prevent errors
        window.signalR = {
            HubConnectionBuilder: function() {
                return {
                    withUrl: function() { return this; },
                    build: function() {
                        return {
                            start: function() { 
                                return Promise.resolve();
                            },
                            on: function() {}
                        };
                    }
                };
            }
        };

        // Load user information if authenticated
        document.addEventListener('DOMContentLoaded', function() {
            @if (User.Identity?.IsAuthenticated == true)
            {
                <text>
                // Get user info via AJAX
                fetch('/api/Account/GetCurrentUserInfo')
                    .then(response => response.json())
                    .then(data => {
                        if (data && data.displayName) {
                            const userLink = document.querySelector('.nav-link');
                            if (userLink && userLink.innerHTML.includes('Welcome, User')) {
                                userLink.innerHTML = userLink.innerHTML.replace('Welcome, User', 'Welcome, ' + data.displayName);
                            }
                        }
                        if (data && data.isAdmin) {
                            const adminBadge = document.getElementById('adminBadge');
                            const adminLink = document.getElementById('adminDashboardLink');
                            if (adminBadge) adminBadge.style.display = 'inline';
                            if (adminLink) adminLink.style.display = 'block';
                        }
                    })
                    .catch(error => console.log('Error loading user info:', error));
                </text>
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
