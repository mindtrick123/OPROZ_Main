@model List<OPROZ_Main.ViewModels.SubscriptionViewModel>
@{
    ViewData["Title"] = "Subscription Plans";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-12 text-center mb-5">
            <h1 class="display-4 fw-bold text-primary">Choose Your Plan</h1>
            <p class="lead">Select the perfect subscription plan for your needs</p>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        </div>
    }

    @if (ViewBag.ServiceName != null)
    {
        <div class="row">
            <div class="col-12 text-center mb-4">
                <h2 class="text-secondary">Plans for @ViewBag.ServiceName</h2>
            </div>
        </div>
    }

    <div class="row justify-content-center">
        @if (Model.Any())
        {
            @foreach (var plan in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 @(plan.IsPopular ? "border-primary shadow-lg" : "border-light shadow")">
                        @if (plan.IsPopular)
                        {
                            <div class="badge bg-primary position-absolute top-0 start-50 translate-middle px-3 py-2">
                                Most Popular
                            </div>
                        }
                        
                        <div class="card-header text-center bg-transparent @(plan.IsPopular ? "border-primary" : "")">
                            <h4 class="my-0 fw-bold text-primary">@plan.Name</h4>
                            <small class="text-muted">@plan.ServiceName</small>
                        </div>
                        
                        <div class="card-body d-flex flex-column">
                            <h1 class="card-title pricing-card-title text-center">
                                â‚¹@plan.Price.ToString("N0")
                                <small class="text-muted fw-light">
                                    /@(plan.Duration.ToString().ToLower())
                                </small>
                            </h1>
                            
                            @if (!string.IsNullOrEmpty(plan.Description))
                            {
                                <p class="text-muted text-center">@plan.Description</p>
                            }
                            
                            <ul class="list-unstyled mt-3 mb-4 flex-grow-1">
                                @if (plan.FeatureList.Any())
                                {
                                    @foreach (var feature in plan.FeatureList)
                                    {
                                        <li class="mb-2">
                                            <i class="fas fa-check text-success me-2"></i>
                                            @feature
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li class="mb-2">
                                        <i class="fas fa-check text-success me-2"></i>
                                        Up to @plan.MaxUsers user@(plan.MaxUsers > 1 ? "s" : "")
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-check text-success me-2"></i>
                                        @((plan.MaxStorage / 1024).ToString("N0")) GB storage
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-check text-success me-2"></i>
                                        @plan.Type.ToString() support
                                    </li>
                                }
                            </ul>
                            
                            <div class="d-grid mt-auto">
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <a href="@Url.Action("Subscribe", "Payment", new { planId = plan.Id })" 
                                       class="btn @(plan.IsPopular ? "btn-primary" : "btn-outline-primary") btn-lg">
                                        Get Started
                                    </a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Register", "Account", new { returnUrl = Url.Action("Subscribe", "Payment", new { planId = plan.Id }) })" 
                                       class="btn @(plan.IsPopular ? "btn-primary" : "btn-outline-primary") btn-lg">
                                        Sign Up & Subscribe
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <div class="card">
                    <div class="card-body py-5">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No Plans Available</h4>
                        <p class="text-muted">There are no subscription plans available at the moment.</p>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            Return to Home
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (Model.Any())
    {
        <div class="row mt-5">
            <div class="col-12 text-center">
                <h4 class="mb-4">Need Help Choosing?</h4>
                <p class="text-muted mb-4">
                    Not sure which plan is right for you? Our support team is here to help.
                </p>
                <a href="@Url.Action("Contact", "Home")" class="btn btn-outline-primary">
                    Contact Support
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Add any plan-specific JavaScript here
        $(document).ready(function() {
            // Animate cards on load
            $('.card').addClass('fade-in');
            
            // Handle subscription button clicks
            $('.btn[href*="Subscribe"]').on('click', function(e) {
                var $btn = $(this);
                $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Processing...');
            });
        });
    </script>
}

@section Styles {
    <style>
        .fade-in {
            animation: fadeIn 0.6s ease-in;
        }
        
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .pricing-card-title {
            font-size: 2.5rem;
        }
        
        .card:hover {
            transform: translateY(-5px);
            transition: all 0.3s ease;
        }
        
        .badge {
            font-size: 0.75rem;
            z-index: 10;
        }
    </style>
}