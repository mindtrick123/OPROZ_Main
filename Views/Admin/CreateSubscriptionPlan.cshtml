@model OPROZ_Main.Models.SubscriptionPlan
@{
    ViewData["Title"] = "Create Subscription Plan";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="page-title">Create Subscription Plan</h1>
        <p class="page-subtitle">Add a new subscription plan</p>
    </div>
    <div>
        <a href="@Url.Action("SubscriptionPlans")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Plans
        </a>
    </div>
</div>

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="#">Master Setup</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("SubscriptionPlans")">Subscription Plans</a></li>
        <li class="breadcrumb-item active">Create</li>
    </ol>
</nav>

<form asp-action="CreateSubscriptionPlan" method="post" class="needs-validation" novalidate>
    <div class="row">
        <div class="col-lg-8">
            <!-- Basic Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Basic Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="form-label">Plan Name *</label>
                                <input asp-for="Name" class="form-control" placeholder="e.g., Professional Plan" required>
                                <span asp-validation-for="Name" class="invalid-feedback"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ServiceId" class="form-label">Service *</label>
                                <select asp-for="ServiceId" class="form-select" required>
                                    <option value="">Select a service</option>
                                    @foreach (var service in ViewBag.Services)
                                    {
                                        <option value="@service.Id">@service.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="ServiceId" class="invalid-feedback"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe what this plan includes..."></textarea>
                        <span asp-validation-for="Description" class="invalid-feedback"></span>
                    </div>
                </div>
            </div>

            <!-- Pricing & Plan Details -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-currency-dollar me-2"></i>Pricing & Plan Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Price" class="form-label">Price *</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" required>
                                </div>
                                <span asp-validation-for="Price" class="invalid-feedback"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Type" class="form-label">Plan Type *</label>
                                <select asp-for="Type" class="form-select" required>
                                    @foreach (var type in Enum.GetValues<OPROZ_Main.Models.PlanType>())
                                    {
                                        <option value="@type">@type</option>
                                    }
                                </select>
                                <span asp-validation-for="Type" class="invalid-feedback"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Duration" class="form-label">Duration *</label>
                                <select asp-for="Duration" class="form-select" required>
                                    @foreach (var duration in Enum.GetValues<OPROZ_Main.Models.PlanDuration>())
                                    {
                                        <option value="@duration">@duration</option>
                                    }
                                </select>
                                <span asp-validation-for="Duration" class="invalid-feedback"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Limits & Features -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-sliders me-2"></i>Limits & Features
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="MaxUsers" class="form-label">Maximum Users</label>
                                <input asp-for="MaxUsers" class="form-control" type="number" min="1" placeholder="1">
                                <small class="form-text text-muted">Number of users allowed in this plan</small>
                                <span asp-validation-for="MaxUsers" class="invalid-feedback"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="MaxStorage" class="form-label">Maximum Storage (MB)</label>
                                <input asp-for="MaxStorage" class="form-control" type="number" min="1" placeholder="1024">
                                <small class="form-text text-muted">Storage limit in megabytes (1024 MB = 1 GB)</small>
                                <span asp-validation-for="MaxStorage" class="invalid-feedback"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Features" class="form-label">Features (JSON)</label>
                        <textarea asp-for="Features" class="form-control" rows="4" placeholder='{"feature1": true, "feature2": "value", "feature3": 100}'></textarea>
                        <small class="form-text text-muted">Optional: JSON object describing plan features</small>
                        <span asp-validation-for="Features" class="invalid-feedback"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Status & Settings -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-gear me-2"></i>Status & Settings
                    </h5>
                </div>
                <div class="card-body">
                    <div class="form-check form-switch mb-3">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                        <label asp-for="IsActive" class="form-check-label">
                            Active Plan
                        </label>
                        <small class="form-text text-muted d-block">Users can subscribe to active plans</small>
                    </div>

                    <div class="form-check form-switch">
                        <input asp-for="IsPopular" class="form-check-input" type="checkbox">
                        <label asp-for="IsPopular" class="form-check-label">
                            Popular Plan
                        </label>
                        <small class="form-text text-muted d-block">Mark as popular to highlight this plan</small>
                    </div>
                </div>
            </div>

            <!-- Help -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-question-circle me-2"></i>Help
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted small mb-3">
                        <strong>Plan Types:</strong><br>
                        • Basic: Entry-level features<br>
                        • Standard: Most popular features<br>
                        • Premium: Advanced features<br>
                        • Enterprise: Full feature set
                    </p>
                    <p class="text-muted small mb-0">
                        <strong>Duration:</strong><br>
                        Set the billing cycle for this plan. Price is charged per duration period.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Actions -->
    <div class="card">
        <div class="card-body">
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg me-2"></i>Create Subscription Plan
                </button>
                <a href="@Url.Action("SubscriptionPlans")" class="btn btn-outline-secondary">
                    <i class="bi bi-x-lg me-2"></i>Cancel
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        // Form validation
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('.needs-validation');
            
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            });

            // Features JSON validation
            const featuresTextarea = document.querySelector('textarea[name="Features"]');
            if (featuresTextarea) {
                featuresTextarea.addEventListener('blur', function() {
                    const value = this.value.trim();
                    if (value && value !== '') {
                        try {
                            JSON.parse(value);
                            this.classList.remove('is-invalid');
                            this.classList.add('is-valid');
                        } catch (e) {
                            this.classList.remove('is-valid');
                            this.classList.add('is-invalid');
                        }
                    } else {
                        this.classList.remove('is-invalid', 'is-valid');
                    }
                });
            }

            // Storage helper
            const storageInput = document.querySelector('input[name="MaxStorage"]');
            if (storageInput) {
                storageInput.addEventListener('input', function() {
                    const value = parseInt(this.value);
                    const nextElement = this.nextElementSibling;
                    if (value && nextElement) {
                        const gb = (value / 1024).toFixed(2);
                        nextElement.textContent = `Storage limit in megabytes (${this.value} MB = ${gb} GB)`;
                    }
                });
            }
        });
    </script>
}

<style>
    .form-check-input:checked {
        background-color: var(--bs-primary);
        border-color: var(--bs-primary);
    }
    
    .was-validated .form-control:valid,
    .was-validated .form-select:valid {
        border-color: #198754;
    }
    
    .was-validated .form-control:invalid,
    .was-validated .form-select:invalid {
        border-color: #dc3545;
    }
</style>