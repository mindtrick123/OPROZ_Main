<!-- Featured Services Section -->
@if (Model.FeaturedServices.Any())
{
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row text-center mb-5">
                <div class="col-lg-8 mx-auto">
                    <h2 class="display-5 fw-bold mb-3">Our Featured Services</h2>
                    <p class="lead text-muted">
                        Discover our most popular solutions designed to accelerate your business growth.
                    </p>
                </div>
            </div>
            
            <div class="row g-4">
                @foreach (var service in Model.FeaturedServices)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card feature-card h-100">
                            <div class="card-body text-center p-4">
                                <div class="mb-3">
                                    <div class="icon" style="font-size: 3rem; color: var(--primary-color);">@(service.IconClass?.Contains("web") == true ? "üåê" : service.IconClass?.Contains("mobile") == true ? "üì±" : service.IconClass?.Contains("marketing") == true ? "üìà" : "üíº")</div>
                                </div>
                                <h5 class="card-title">@service.Name</h5>
                                <p class="card-text">@service.ShortDescription</p>
                                @if (service.BasePrice.HasValue)
                                {
                                    <p class="text-primary fw-bold">Starting at $@service.BasePrice.Value.ToString("N0")</p>
                                }
                            </div>
                            <div class="card-footer bg-transparent">
                                <a href="@Url.Action("Services", "Home")" class="btn btn-outline-primary">
                                    Learn More <span class="icon-arrow-right"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- Popular Plans Section -->
@if (Model.PopularPlans.Any())
{
    <section class="py-5">
        <div class="container">
            <div class="row text-center mb-5">
                <div class="col-lg-8 mx-auto">
                    <h2 class="display-5 fw-bold mb-3">Popular Subscription Plans</h2>
                    <p class="lead text-muted">
                        Choose the perfect plan for your business needs with flexible pricing options.
                    </p>
                </div>
            </div>
            
            <div class="row g-4 justify-content-center">
                @foreach (var plan in Model.PopularPlans.Take(3))
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card feature-card h-100 position-relative @(plan.IsPopular ? "border-warning" : "")">
                            @if (plan.IsPopular)
                            {
                                <div class="position-absolute top-0 start-50 translate-middle">
                                    <span class="badge bg-warning text-dark px-3 py-2 fw-bold">üåü Most Popular</span>
                                </div>
                            }
                            <div class="card-body text-center p-4 @(plan.IsPopular ? "pt-5" : "")">
                                <h5 class="card-title fw-bold">@plan.Name</h5>
                                <div class="mb-3">
                                    <span class="display-6 fw-bold text-primary">$@plan.Price.ToString("N0")</span>
                                    <span class="text-muted">/@plan.Duration.ToString().ToLower()</span>
                                </div>
                                <p class="card-text text-muted">@plan.Description</p>
                                <ul class="list-unstyled text-start">
                                    <li class="mb-2"><span class="icon-check text-success me-2"></span>Up to @plan.MaxUsers users</li>
                                    <li class="mb-2"><span class="icon-check text-success me-2"></span>@(plan.MaxStorage / 1024)GB storage</li>
                                    <li class="mb-2"><span class="icon-check text-success me-2"></span>Email support</li>
                                    @if (plan.IsPopular)
                                    {
                                        <li class="mb-2"><span class="icon-check text-success me-2"></span>Priority support</li>
                                        <li class="mb-2"><span class="icon-check text-success me-2"></span>Advanced analytics</li>
                                    }
                                </ul>
                            </div>
                            <div class="card-footer bg-transparent p-4">
                                <a href="@Url.Action("Register", "Account")" class="btn @(plan.IsPopular ? "btn-warning" : "btn-outline-primary") w-100 fw-bold">
                                    @(plan.IsPopular ? "üöÄ Get Started" : "Get Started")
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

