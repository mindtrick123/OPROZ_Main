@{
    ViewData["Title"] = "Blog";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto text-center mb-5">
            <h1 class="display-4 fw-bold">OPROZ Blog</h1>
            <p class="lead text-muted">Insights, tips, and updates from the world of business and technology</p>
        </div>
    </div>

    <!-- Featured Article -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-lg">
                <div class="row g-0">
                    <div class="col-md-6">
                        <div class="bg-primary d-flex align-items-center justify-content-center h-100">
                            <i class="fas fa-newspaper text-white" style="font-size: 8rem; opacity: 0.3;"></i>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card-body p-4 p-md-5">
                            <span class="badge bg-primary mb-2">Featured</span>
                            <h3 class="card-title fw-bold">Building Scalable SaaS Applications</h3>
                            <p class="card-text text-muted">
                                Learn how to design and implement scalable Software-as-a-Service applications 
                                that can grow with your business needs. Discover best practices for architecture, 
                                security, and performance optimization.
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>January 15, 2024 â€¢ 
                                    <i class="fas fa-user me-1"></i>OPROZ Team
                                </small>
                            </p>
                            <a href="#" class="btn btn-primary">
                                <i class="fas fa-arrow-right me-2"></i>Read More
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Blog Categories -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="fw-bold mb-4">Browse by Category</h2>
            <div class="row g-3">
                <div class="col-6 col-md-3">
                    <a href="#" class="text-decoration-none">
                        <div class="card border-0 shadow-sm h-100 category-card">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-laptop-code text-primary mb-2" style="font-size: 2rem;"></i>
                                <h6 class="card-title mb-0">Technology</h6>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-6 col-md-3">
                    <a href="#" class="text-decoration-none">
                        <div class="card border-0 shadow-sm h-100 category-card">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-chart-line text-success mb-2" style="font-size: 2rem;"></i>
                                <h6 class="card-title mb-0">Business</h6>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-6 col-md-3">
                    <a href="#" class="text-decoration-none">
                        <div class="card border-0 shadow-sm h-100 category-card">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-bullhorn text-info mb-2" style="font-size: 2rem;"></i>
                                <h6 class="card-title mb-0">Marketing</h6>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-6 col-md-3">
                    <a href="#" class="text-decoration-none">
                        <div class="card border-0 shadow-sm h-100 category-card">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-lightbulb text-warning mb-2" style="font-size: 2rem;"></i>
                                <h6 class="card-title mb-0">Tips & Tricks</h6>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Articles -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="fw-bold mb-4">Recent Articles</h2>
            <div class="row g-4">
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-shield-alt text-muted" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                        <div class="card-body">
                            <span class="badge bg-primary mb-2">Security</span>
                            <h5 class="card-title">Essential Security Practices for SaaS</h5>
                            <p class="card-text text-muted">
                                Protect your SaaS application and user data with these essential security measures 
                                and best practices.
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>January 10, 2024
                                </small>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <a href="#" class="btn btn-outline-primary w-100">Read Article</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-users text-muted" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                        <div class="card-body">
                            <span class="badge bg-success mb-2">Business</span>
                            <h5 class="card-title">Growing Your Customer Base</h5>
                            <p class="card-text text-muted">
                                Proven strategies to attract, convert, and retain customers in the competitive 
                                SaaS marketplace.
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>January 5, 2024
                                </small>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <a href="#" class="btn btn-outline-primary w-100">Read Article</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-chart-bar text-muted" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                        <div class="card-body">
                            <span class="badge bg-info mb-2">Analytics</span>
                            <h5 class="card-title">Data-Driven Decision Making</h5>
                            <p class="card-text text-muted">
                                Learn how to leverage data and analytics to make informed business decisions 
                                and drive growth.
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>December 28, 2023
                                </small>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <a href="#" class="btn btn-outline-primary w-100">Read Article</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Newsletter Signup -->
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="bg-primary text-white rounded p-5 text-center">
                <h3 class="fw-bold mb-4">Stay Updated</h3>
                <p class="mb-4">
                    Subscribe to our newsletter to receive the latest articles, insights, and updates 
                    directly in your inbox.
                </p>
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Enter your email address">
                            <button class="btn btn-light" type="button">
                                <i class="fas fa-paper-plane me-1"></i>Subscribe
                            </button>
                        </div>
                    </div>
                </div>
                <small class="mt-3 d-block">We respect your privacy. Unsubscribe at any time.</small>
            </div>
        </div>
    </div>
</div>

<style>
.category-card:hover {
    transform: translateY(-5px);
    transition: transform 0.3s ease;
}

.category-card {
    transition: transform 0.3s ease;
}
</style>