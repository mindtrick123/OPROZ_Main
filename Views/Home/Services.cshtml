@model List<Service>
@{
    ViewData["Title"] = "Services";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto text-center mb-5">
            <h1 class="display-4 fw-bold">Our Services</h1>
            <p class="lead text-muted">Discover comprehensive business solutions tailored to your needs</p>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        @if (ViewBag.ServicesByCategory != null)
        {
            @foreach (var categoryGroup in (List<IGrouping<string, Service>>)ViewBag.ServicesByCategory)
            {
                <div class="row mb-5">
                    <div class="col-12">
                        <h2 class="fw-bold mb-4">
                            <i class="fas fa-folder-open me-2 text-primary"></i>@categoryGroup.Key
                        </h2>
                        <div class="row g-4">
                            @foreach (var service in categoryGroup)
                            {
                                <div class="col-lg-6 col-xl-4">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-3">
                                                <span class="badge bg-primary">@service.Category</span>
                                                <h6 class="text-success fw-bold">â‚¹@service.Price.ToString("N2")</h6>
                                            </div>
                                            <h5 class="card-title">@service.Name</h5>
                                            <p class="card-text text-muted">
                                                @(service.Description?.Length > 120 ? service.Description.Substring(0, 120) + "..." : service.Description)
                                            </p>
                                            @if (service.Company != null)
                                            {
                                                <div class="d-flex align-items-center mb-3">
                                                    <i class="fas fa-building text-muted me-2"></i>
                                                    <small class="text-muted">@service.Company.Name</small>
                                                </div>
                                            }
                                            <div class="d-flex gap-2">
                                                <a href="#" class="btn btn-outline-primary btn-sm flex-grow-1">
                                                    <i class="fas fa-info-circle me-1"></i>Details
                                                </a>
                                                <a href="#" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-shopping-cart me-1"></i>Order
                                                </a>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-transparent border-0 pt-0">
                                            <small class="text-muted">
                                                <i class="fas fa-clock me-1"></i>Added @service.CreatedAt.ToString("MMM dd, yyyy")
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        }
    }
    else
    {
        <div class="row">
            <div class="col-12 text-center">
                <div class="py-5">
                    <i class="fas fa-box-open text-muted mb-4" style="font-size: 5rem; opacity: 0.5;"></i>
                    <h3 class="text-muted">No Services Available</h3>
                    <p class="text-muted">Services will be displayed here once they are added to the platform.</p>
                    @if (!SignInManager.IsSignedIn(User))
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary">
                            <i class="fas fa-user-plus me-2"></i>Register to Access Services
                        </a>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Service Categories Info -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="bg-light rounded p-5">
                <h3 class="fw-bold mb-4 text-center">Service Categories</h3>
                <div class="row g-4">
                    <div class="col-md-3 text-center">
                        <div class="mb-3">
                            <i class="fas fa-laptop-code text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h5>Technology</h5>
                        <p class="text-muted small">Web development, mobile apps, cloud solutions, and technical consulting services.</p>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="mb-3">
                            <i class="fas fa-bullhorn text-success" style="font-size: 3rem;"></i>
                        </div>
                        <h5>Marketing</h5>
                        <p class="text-muted small">Digital marketing, SEO, social media management, and brand development services.</p>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="mb-3">
                            <i class="fas fa-chart-line text-info" style="font-size: 3rem;"></i>
                        </div>
                        <h5>Consulting</h5>
                        <p class="text-muted small">Business strategy, operations consulting, and organizational development services.</p>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="mb-3">
                            <i class="fas fa-handshake text-warning" style="font-size: 3rem;"></i>
                        </div>
                        <h5>Support</h5>
                        <p class="text-muted small">Customer support, technical assistance, and business process outsourcing.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="row mt-5">
        <div class="col-lg-8 mx-auto text-center">
            <div class="bg-primary text-white rounded p-5">
                <h3 class="fw-bold mb-4">Need a Custom Solution?</h3>
                <p class="mb-4">
                    Can't find exactly what you're looking for? Our team can work with you to create 
                    custom solutions tailored to your specific business requirements.
                </p>
                <a asp-controller="Home" asp-action="Contact" class="btn btn-light btn-lg">
                    <i class="fas fa-comments me-2"></i>Contact Our Team
                </a>
            </div>
        </div>
    </div>
</div>