@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Services Management";
}

@model IEnumerable<OPROZ_Main.Models.Service>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="fas fa-tools me-2"></i>Services Management
    </h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>Add New Service
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Base Price</th>
                            <th>Status</th>
                            <th>Featured</th>
                            <th>Display Order</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var service in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(service.IconClass))
                                        {
                                            <i class="@service.IconClass me-2"></i>
                                        }
                                        <div>
                                            <strong>@service.Name</strong>
                                            @if (!string.IsNullOrEmpty(service.ShortDescription))
                                            {
                                                <br><small class="text-muted">@service.ShortDescription</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (service.BasePrice.HasValue)
                                    {
                                        <strong>â‚¹@service.BasePrice.Value.ToString("N2")</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not set</span>
                                    }
                                </td>
                                <td>
                                    @if (service.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    @if (service.IsFeatured)
                                    {
                                        <span class="badge bg-warning">Featured</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@service.DisplayOrder</td>
                                <td>
                                    <small>@service.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@service.Id" class="btn btn-outline-info" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@service.Id" class="btn btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-tools fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No Services Found</h4>
                <p class="text-muted">Get started by creating your first service.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Add New Service
                </a>
            </div>
        }
    </div>
</div>