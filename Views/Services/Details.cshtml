@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Service Details";
}

@model OPROZ_Main.Models.Service

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="fas fa-eye me-2"></i>Service Details
    </h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
            <i class="fas fa-edit me-1"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Services
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    @if (!string.IsNullOrEmpty(Model.IconClass))
                    {
                        <i class="@Model.IconClass me-2"></i>
                    }
                    @Model.Name
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Basic Information</h6>
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Name:</strong></td>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <td><strong>Base Price:</strong></td>
                                <td>
                                    @if (Model.BasePrice.HasValue)
                                    {
                                        <span class="badge bg-success">₹@Model.BasePrice.Value.ToString("N2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not set</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Display Order:</strong></td>
                                <td>@Model.DisplayOrder</td>
                            </tr>
                            <tr>
                                <td><strong>Status:</strong></td>
                                <td>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Featured:</strong></td>
                                <td>
                                    @if (Model.IsFeatured)
                                    {
                                        <span class="badge bg-warning">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No</span>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h6>Media</h6>
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Icon Class:</strong></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model.IconClass))
                                    {
                                        <span class="font-monospace">@Model.IconClass</span>
                                        <i class="@Model.IconClass ms-2"></i>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not set</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Image URL:</strong></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <a href="@Model.ImageUrl" target="_blank" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-external-link-alt me-1"></i>View Image
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not set</span>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.ShortDescription))
                {
                    <h6>Short Description</h6>
                    <p class="text-muted">@Model.ShortDescription</p>
                }

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <h6>Description</h6>
                    <p>@Model.Description</p>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <!-- Subscription Plans using this service -->
        <div class="card mb-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-layer-group me-2"></i>Subscription Plans
                </h6>
            </div>
            <div class="card-body">
                @if (Model.PlanServices.Any())
                {
                    @foreach (var planService in Model.PlanServices)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <strong>@planService.SubscriptionPlan.Name</strong>
                                <br><small class="text-muted">₹@planService.SubscriptionPlan.Price.ToString("N2") / @planService.SubscriptionPlan.Duration</small>
                            </div>
                            @if (planService.SubscriptionPlan.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted mb-0">No subscription plans are using this service.</p>
                }
            </div>
        </div>

        <!-- Offers for this service -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-tags me-2"></i>Related Offers
                </h6>
            </div>
            <div class="card-body">
                @if (Model.Offers.Any())
                {
                    @foreach (var offer in Model.Offers)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <strong>@offer.Name</strong>
                                <br><small class="text-muted">Code: @offer.Code</small>
                            </div>
                            @if (offer.IsActive)
                            {
                                <span class="badge bg-warning">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted mb-0">No offers are associated with this service.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Additional Information
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <small class="text-muted">Created: @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                    </div>
                    <div class="col-md-6">
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <small class="text-muted">Last Updated: @Model.UpdatedAt.Value.ToString("MMM dd, yyyy HH:mm")</small>
                        }
                        else
                        {
                            <small class="text-muted">Never updated</small>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>