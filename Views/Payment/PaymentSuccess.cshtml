@model OPROZ_Main.Models.PaymentHistory
@{
    ViewData["Title"] = "Payment Successful";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-check-circle"></i> Payment Successful!
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-success" role="alert">
                        <h5 class="alert-heading">Thank you for your subscription!</h5>
                        <p>Your payment has been processed successfully. Your subscription is now active.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Payment Details</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Transaction ID:</strong></td>
                                    <td>@Model.TransactionId</td>
                                </tr>
                                <tr>
                                    <td><strong>Razorpay Payment ID:</strong></td>
                                    <td>@Model.RazorpayPaymentId</td>
                                </tr>
                                <tr>
                                    <td><strong>Amount Paid:</strong></td>
                                    <td>₹@Model.FinalAmount.ToString("N2")</td>
                                </tr>
                                @if (Model.DiscountAmount > 0)
                                {
                                    <tr>
                                        <td><strong>Discount Applied:</strong></td>
                                        <td class="text-success">₹@Model.DiscountAmount?.ToString("N2")</td>
                                    </tr>
                                }
                                <tr>
                                    <td><strong>Payment Date:</strong></td>
                                    <td>@Model.PaymentDate.ToString("dd MMM yyyy, hh:mm tt")</td>
                                </tr>
                                <tr>
                                    <td><strong>Status:</strong></td>
                                    <td><span class="badge bg-success">@Model.Status</span></td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Subscription Details</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Plan:</strong></td>
                                    <td>@Model.SubscriptionPlan.Name</td>
                                </tr>
                                <tr>
                                    <td><strong>Duration:</strong></td>
                                    <td>@Model.SubscriptionPlan.Duration</td>
                                </tr>
                                <tr>
                                    <td><strong>Start Date:</strong></td>
                                    <td>@Model.SubscriptionStartDate?.ToString("dd MMM yyyy")</td>
                                </tr>
                                <tr>
                                    <td><strong>End Date:</strong></td>
                                    <td>@Model.SubscriptionEndDate?.ToString("dd MMM yyyy")</td>
                                </tr>
                                <tr>
                                    <td><strong>Max Users:</strong></td>
                                    <td>@Model.SubscriptionPlan.MaxUsers</td>
                                </tr>
                                <tr>
                                    <td><strong>Storage:</strong></td>
                                    <td>@(Model.SubscriptionPlan.MaxStorage / 1024) GB</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mt-3">
                            <h6>Notes:</h6>
                            <p class="text-muted">@Model.Notes</p>
                        </div>
                    }

                    <div class="text-center mt-4">
                        <a href="@Url.Action("History", "Payment")" class="btn btn-primary">
                            <i class="fas fa-history"></i> View Payment History
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary ms-2">
                            <i class="fas fa-home"></i> Go to Dashboard
                        </a>
                        <button onclick="window.print()" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-print"></i> Print Receipt
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h6>What's Next?</h6>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-envelope text-primary"></i> You will receive a confirmation email shortly</li>
                        <li><i class="fas fa-user-cog text-primary"></i> Access your account dashboard to manage your subscription</li>
                        <li><i class="fas fa-phone text-primary"></i> Contact support if you need any assistance</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        .btn, .card-header {
            display: none !important;
        }
        .container {
            max-width: 100% !important;
        }
    }
</style>