@model AdminLoginViewModel
@{
    ViewData["Title"] = "Admin Login";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow border-warning">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="mb-3">
                                <span style="font-size: 3rem;">üîê</span>
                            </div>
                            <h2 class="fw-bold text-warning">Admin Access</h2>
                            <p class="text-muted">Secure login for administrators</p>
                        </div>

                        <form asp-action="AdminLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>
                            
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Admin Email Address</label>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your admin email" autofocus>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Admin Password</label>
                                <input asp-for="Password" class="form-control form-control-lg" placeholder="Enter your admin password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-4 form-check d-flex align-items-center">
                                <input asp-for="RememberMe" class="form-check-input me-2">
                                <label asp-for="RememberMe" class="form-check-label">
                                    Remember me
                                </label>
                            </div>
                            
                            <button type="submit" class="btn btn-warning btn-lg w-100 mb-4 text-dark fw-bold">
                                <i class="fas fa-shield-alt me-2"></i>Admin Sign In
                            </button>
                        </form>

                        <div class="text-center">
                            <a asp-action="ForgotPassword" class="text-decoration-none">Forgot your password?</a>
                        </div>

                        <hr class="my-4">

                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                <small>‚ö†Ô∏è This is a secure admin area. Unauthorized access is prohibited.</small>
                            </p>
                            <p class="mt-2 mb-0">
                                <a asp-action="Login" class="text-decoration-none">
                                    ‚Üê Back to User Login
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}