@{
    ViewData["Title"] = "Admin Password Reset Sent";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow border-warning">
                    <div class="card-body p-5 text-center">
                        <div class="mb-4">
                            <span style="font-size: 4rem;">ðŸ“§</span>
                        </div>
                        
                        <h2 class="fw-bold text-success mb-3">Check Your Email</h2>
                        
                        <p class="text-muted mb-4">
                            If an admin account with that email address exists, we've sent you a secure password reset link. 
                            Please check your email and follow the instructions to reset your admin password.
                        </p>
                        
                        <div class="alert alert-warning mb-4" role="alert">
                            <i class="fas fa-shield-alt me-2"></i>
                            <strong>Security Notice:</strong> 
                            Admin password reset links are only sent to verified administrator accounts.
                        </div>
                        
                        <div class="alert alert-info mb-4" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Didn't receive the email?</strong> 
                            Check your spam folder or contact the system administrator.
                        </div>
                        
                        <div class="d-grid gap-2">
                            <a asp-action="AdminLogin" class="btn btn-warning btn-lg text-dark fw-bold">
                                <i class="fas fa-arrow-left me-2"></i>Back to Admin Login
                            </a>
                            
                            <a asp-action="AdminForgotPassword" class="btn btn-outline-warning">
                                <i class="fas fa-redo me-2"></i>Try Again
                            </a>
                        </div>
                        
                        <hr class="my-4">
                        
                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                <small>Need help? Contact your system administrator or 
                                <a href="@Url.Action("Contact", "Home")" class="text-decoration-none">support team</a></small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>