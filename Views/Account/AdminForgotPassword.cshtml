@model AdminForgotPasswordViewModel
@{
    ViewData["Title"] = "Admin Forgot Password";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow border-warning">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="mb-3">
                                <span style="font-size: 3rem;">üîê</span>
                            </div>
                            <h2 class="fw-bold text-warning">Admin Password Reset</h2>
                            <p class="text-muted">Enter your admin email address and we'll send you a secure link to reset your password.</p>
                        </div>

                        <form asp-action="AdminForgotPassword" method="post">
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="display: none;"></div>
                            
                            <div class="mb-4">
                                <label asp-for="Email" class="form-label">Admin Email Address</label>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your admin email address" autofocus>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-shield-alt me-1"></i>
                                    Only administrators and managers can reset passwords through this form.
                                </div>
                            </div>
                            
                            <button type="submit" class="btn btn-warning btn-lg w-100 mb-4 text-dark fw-bold">
                                <i class="fas fa-envelope me-2"></i>Send Admin Reset Link
                            </button>
                        </form>

                        <div class="text-center">
                            <p class="mb-0">
                                Remember your password? 
                                <a asp-action="AdminLogin" class="text-decoration-none fw-bold">Admin Sign In</a>
                            </p>
                        </div>

                        <hr class="my-4">

                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                <small>‚ö†Ô∏è This is a secure admin area. Unauthorized access is prohibited.</small>
                            </p>
                            <p class="mt-2 mb-0">
                                <a asp-action="Login" class="text-decoration-none">
                                    ‚Üê Back to User Login
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Show validation summary if there are errors
        document.addEventListener('DOMContentLoaded', function() {
            const validationSummary = document.querySelector('[data-valmsg-summary="true"]');
            if (validationSummary && validationSummary.innerHTML.trim()) {
                const alertDiv = document.querySelector('.alert-danger');
                if (alertDiv) {
                    alertDiv.style.display = 'block';
                }
            }
        });
    </script>
}