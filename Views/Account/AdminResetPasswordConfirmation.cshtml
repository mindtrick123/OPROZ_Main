@{
    ViewData["Title"] = "Admin Password Reset Successful";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow border-success">
                    <div class="card-body p-5 text-center">
                        <div class="mb-4">
                            <span style="font-size: 4rem;">âœ…</span>
                        </div>
                        
                        <h2 class="fw-bold text-success mb-3">Admin Password Reset Successful!</h2>
                        
                        <p class="text-muted mb-4">
                            Your admin password has been successfully reset. You can now use your new password to access the administrative interface.
                        </p>
                        
                        <div class="alert alert-success mb-4" role="alert">
                            <i class="fas fa-shield-check me-2"></i>
                            <strong>Security Confirmed!</strong> Your administrator account is now secure with your new password.
                        </div>
                        
                        <div class="alert alert-warning mb-4" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Security Reminder:</strong> Please log out of all other sessions and keep your admin credentials secure.
                        </div>
                        
                        <div class="d-grid gap-2">
                            <a asp-action="AdminLogin" class="btn btn-warning btn-lg text-dark fw-bold">
                                <i class="fas fa-shield-alt me-2"></i>Admin Sign In Now
                            </a>
                        </div>
                        
                        <hr class="my-4">
                        
                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                <small>
                                    <i class="fas fa-lock me-1"></i>
                                    For maximum security, please keep your admin password confidential and change it regularly.
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>